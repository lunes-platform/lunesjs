{
    "name": "lunesweb3-js",
    "version": "0.1.0",
    "description": "Library for communication with nodes in mainnet or testnet of the lunes-blockchain network",
    "main": "index.js",
    "repository": "git@git.lunes.io:blockchain/labs/lunesjs.git",
    "keywords": [
        "blockchain",
        "lunes",
        "client"
    ],
    "author": "lunes-platform",
    "license": "Apache 2.0",
    "scripts": {
        "build": "tsc",
        "test": "yarn jest",
        "autotest": "yarn jest --watchAll",
        "watch": "tsc --watch",
        "wheel": "nodemon ./build/src/main.js",
        "postinstall": "husky install",
        "commit": "cz"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.1.0",
        "@commitlint/config-conventional": "^16.0.0",
        "@types/jest": "^27.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "jest-junit": "^13.0.0",
        "nodemon": "^2.0.15",
        "prettier": "2.5.1",
        "ts-jest": "^27.1.2",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "base-x": "^3.0.9",
        "lunesrs": "^1.1.0",
        "ts-log-debug": "5.5.3"
    },
    "lint-staged": {
        "**/*": "prettier --write"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "types": {
                "added": {
                    "description": "Add a new feature",
                    "title": "Added"
                },
                "merged": {
                    "description": "Resolves an issue and merge it to prod",
                    "title": "Merged"
                },
                "fixed": {
                    "description": "Fix a bug",
                    "title": "Fixed"
                },
                "refactored": {
                    "description": "Does not add a feature or fix a bug",
                    "title": "Refactored"
                },
                "deprecated": {
                    "description": "Breaks compatibility with an earlier version",
                    "title": "Deprecated"
                }
            }
        }
    }
}
